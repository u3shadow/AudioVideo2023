<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
  <Button
      android:text="图片展示"
      android:id="@+id/btn_show_image"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <Button
      android:text="PCM录制播放"
      android:id="@+id/btn_pcm"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <Button
      android:text="WAV录制播放"
      android:id="@+id/btn_wav"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <Button
      android:text="摄像头预览"
      android:id="@+id/btn_preview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <Button
      android:text="拆分mp4"
      android:id="@+id/btn_extra_mp4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <Button
      android:text="合成mp4"
      android:id="@+id/btn_mux_mp4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <Button
      android:text="显示三角"
      android:id="@+id/btn_show_triangle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <Button
      android:text="显示图片"
      android:id="@+id/btn_show_pic"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <Button
      android:text="aac硬编"
      android:id="@+id/btn_encode_aac"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <Button
      android:text="aac硬解"
      android:id="@+id/btn_decode_aac"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
</LinearLayout>